{
  "name": "blueprint-task-manager",
  "version": "0.6.0",
  "author": "Stan Lemon <stanlemon@users.noreply.github.com>",
  "description": "Blueprint Task Manager - A playground to experiment with React and Redux.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:stanlemon/blueprint-taskmanager.git"
  },
  "engines": {
    "node": ">=12.0"
  },
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "NODE_ENV=development nodemon app.js",
    "lint": "eslint --ext .jsx --ext .js app.js src/** web/js/**",
    "prettier": "prettier --write \"{app.js,src/**/*.js,web/**/*.js,web/**/*.less}\"",
    "build": "NODE_ENV=production parcel build web/index.html",
    "test": "NODE_ENV=test jest --coverage --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test-watch": "NODE_ENV=test jest --watchAll --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test-e2e": "NODE_ENV=test jest ./app.test.js -t 'end to end' --detectOpenHandles",
    "test-all": "NODE_ENV=test jest  --detectOpenHandles --coverage --testRegex .*\\.test.js$"
  },
  "browserslist": [
    "Firefox > 59",
    "Safari > 11",
    "iOS > 11",
    "Chrome > 55",
    "node > 10",
    "Edge > 16"
  ],
  "jest": {
    "verbose": true,
    "automock": false,
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "web/*",
      "dist/*"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^16.0.1",
    "@hot-loader/react-dom": "^16.9.0",
    "@loadable/component": "^5.10.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bootstrap": ">=3.4.1 <4.0.0",
    "bootswatch": ">=3.4.1 <4.0.0",
    "classnames": "^2.2.6",
    "client-sessions": "^0.8.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "date-fns": "^2.2.1",
    "express": "^4.17.1",
    "font-awesome": "^4.7.0",
    "helmet": "^3.21.0",
    "history": "^4.10.1",
    "jsonwebtoken": "^8.5.1",
    "killable": "^1.0.1",
    "knex": "^0.19.3",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-datepicker": "^2.9.6",
    "react-dom": "^16.9.0",
    "react-hot-loader": "^4.12.13",
    "react-redux": "^7.1.1",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "serve-static": "^1.14.1",
    "uuid": "^3.3.3",
    "validator": "^11.1.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^24.9.0",
    "less": "^3.10.3",
    "nodemon": "^1.19.2",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "prettier": "^1.18.2",
    "puppeteer": "^1.20.0",
    "react-test-renderer": "^16.9.0",
    "sqlite3": "^4.1.0",
    "wait-for-expect": "^2.0.0"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  }
}
