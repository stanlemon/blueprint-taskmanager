{
  "name": "blueprint-task-manager",
  "version": "0.6.0",
  "author": "Stan Lemon <stanlemon@users.noreply.github.com>",
  "description": "Blueprint Task Manager - A playground to experiment with React and Redux.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:stanlemon/blueprint-taskmanager.git"
  },
  "engines": {
    "node": ">=12.0"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon --trace-warnings server.js",
    "lint": "eslint --ext .jsx --ext .js server.js src/** web/js/**",
    "prettier": "prettier --write \"{server.js,src/**/*.js,web/**/*.js,web/**/*.less}\"",
    "build": "rm -rf ./dist/* && NODE_ENV=production parcel build web/index.html",
    "test": "NODE_ENV=test jest --coverage --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test-watch": "NODE_ENV=test jest --watchAll --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test-e2e": "NODE_ENV=test jest ./server.test.js -t 'end to end' --coverage --detectOpenHandles",
    "test-all": "NODE_ENV=test jest  --detectOpenHandles --testRegex .*\\.test.js$"
  },
  "browserslist": [
    "last 1 year, not dead",
    "edge >= 18",
    "not ie 11",
    "not ie_mob 11",
    "not samsung < 1000",
    "not opera < 1000",
    "not kaios < 1000",
    "not android < 1000"
  ],
  "jest": {
    "verbose": true,
    "automock": false,
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "web/js/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/db/migrations/",
      "/web/js/components/elements/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "web/*",
      "dist/*"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@hapi/joi": "^17.1.1",
    "@hot-loader/react-dom": "^16.13.0",
    "@loadable/component": "^5.13.1",
    "@sendgrid/mail": "^7.2.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bulma": "^0.9.0",
    "classnames": "^2.2.6",
    "client-sessions": "^0.8.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.15.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "history": "^4.10.1 <5.0.0",
    "jsonwebtoken": "^8.5.1",
    "killable": "^1.0.1",
    "knex": "^0.21.2",
    "lodash": "^4.17.19",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-datepicker": "^3.1.3",
    "react-dom": "^16.13.1",
    "react-fontawesome": "^1.7.1",
    "react-hot-loader": "^4.12.21",
    "react-redux": "^7.2.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-tag-autocomplete": "^6.0.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "serve-static": "^1.14.1",
    "shortid": "^2.2.15",
    "uuid": "^8.3.0",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@testing-library/dom": "^7.21.5",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.19.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.4",
    "jest": "^26.1.0",
    "less": "^3.12.2",
    "nodemon": "^2.0.4",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "prettier": "^2.0.5",
    "puppeteer": "^5.2.1",
    "react-test-renderer": "^16.13.1",
    "sass": "^1.26.10",
    "sqlite3": "^5.0.0",
    "supertest": "^4.0.2",
    "wait-for-expect": "^3.0.2"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  }
}
