{
  "name": "blueprint-task-manager",
  "version": "0.6.0",
  "author": "Stan Lemon <stanlemon@users.noreply.github.com>",
  "description": "Blueprint Task Manager - A playground to experiment with React and Redux.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:stanlemon/blueprint-taskmanager.git"
  },
  "engines": {
    "node": ">=12.0"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon --trace-warnings server.js",
    "lint": "eslint --ext .jsx --ext .js server.js src/** web/js/**",
    "prettier": "prettier --write \"{server.js,src/**/*.js,web/**/*.js,web/**/*.less}\"",
    "build": "rm -rf ./dist/* && NODE_ENV=production parcel build web/index.html",
    "test": "NODE_ENV=test jest --coverage --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test-watch": "NODE_ENV=test jest --watchAll --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test-e2e": "NODE_ENV=test jest ./server.test.js -t 'end to end' --detectOpenHandles",
    "test-all": "NODE_ENV=test jest  --detectOpenHandles --coverage --testRegex .*\\.test.js$"
  },
  "browserslist": [
    "last 1 year, not dead",
    "edge >= 18",
    "current node",
    "not ie 11",
    "not ie_mob 11",
    "not samsung < 1000",
    "not opera < 1000",
    "not kaios < 1000",
    "not android < 1000"
  ],
  "jest": {
    "verbose": true,
    "automock": false,
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "web/*",
      "dist/*"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@hot-loader/react-dom": "^16.11.0",
    "@loadable/component": "^5.10.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bootstrap": ">=3.4.1 <4.0.0",
    "bootswatch": ">=3.4.1 <4.0.0",
    "classnames": "^2.2.6",
    "client-sessions": "^0.8.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "date-fns": "^2.8.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "font-awesome": "^4.7.0",
    "helmet": "^3.21.2",
    "history": "^4.10.1",
    "jsonwebtoken": "^8.5.1",
    "killable": "^1.0.1",
    "knex": "^0.20.2",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.14.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-datepicker": "^2.10.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-tag-autocomplete": "^5.11.2",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "serve-static": "^1.14.1",
    "uuid": "^3.3.3",
    "validator": "^12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@testing-library/dom": "^6.10.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "jest": "^24.9.0",
    "less": "^3.10.3",
    "nodemon": "^2.0.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "puppeteer": "^2.0.0",
    "react-test-renderer": "^16.12.0",
    "sqlite3": "^4.1.0",
    "supertest": "^4.0.2",
    "wait-for-expect": "^3.0.1"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  }
}
