{
  "name": "blueprint-task-manager",
  "version": "0.6.0",
  "author": "Stan Lemon <stanlemon@users.noreply.github.com>",
  "description": "Blueprint Task Manager - A playground to experiment with React and Redux.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:stanlemon/blueprint-taskmanager.git"
  },
  "engines": {
    "node": ">=17.0"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"NODE_ENV=development nodemon --trace-warnings server.js\" \"npm run webpack:dev\"",
    "lint": "eslint --ext .jsx --ext .js server.js src/** web/js/**",
    "lint:format": "eslint --ext .jsx --ext .js server.js src/** web/js/** --fix",
    "build": "npm run webpack:build",
    "webpack:build": "rm -rf ./dist/* && NODE_ENV=production webpack",
    "webpack:dev": "NODE_ENV=development webpack serve",
    "test": "NODE_ENV=test jest --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test:coverage": "NODE_ENV=test jest --coverage --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test:watch": "NODE_ENV=test jest --watchAll --testRegex \"(web/js|src)/.*\\.test.js$\"",
    "test:e2e": "npm run build; NODE_ENV=test jest ./server.test.js --detectOpenHandles",
    "test:all": "NODE_ENV=test jest  --detectOpenHandles --testRegex .*\\.test.js$"
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "web/*",
      "dist/*"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.6.0",
    "@stanlemon/webdev": "^0.1.9",
    "bcryptjs": "^2.4.3",
    "bulma": "^0.9.3",
    "classnames": "^2.3.1",
    "client-sessions": "^0.8.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.26.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.0.2",
    "helmet": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.14",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "prop-types": "^15.7.2",
    "react-datepicker": "^4.3.0",
    "react-fontawesome": "^1.7.1",
    "react-redux": "^7.2.6",
    "react-tag-autocomplete": "^6.3.0",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "rsuite": "^5.2.3",
    "serve-static": "^1.14.1",
    "shortid": "^2.2.16",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "wouter": "^2.7.5"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "jest-puppeteer": "^6.0.2",
    "nodemon": "^2.0.15",
    "puppeteer": "^13.0.0",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.6",
    "wait-for-expect": "^3.0.2"
  }
}
