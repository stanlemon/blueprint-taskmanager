{
    "name": "blueprint-task-manager",
    "version": "0.5.0",
    "author": "Stan Lemon <stanlemon@users.noreply.github.com>",
    "description": "Blueprint Task Manager - A playground to experiment with React and Redux.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:stanlemon/blueprint-taskmanager.git"
    },
    "engines": {
        "node": ">=12.0"
    },
    "scripts": {
        "start": "node app.js",
        "lint": "eslint --ext .jsx --ext .js app.js models/* web/js/**",
        "prettier": "prettier --write --tab-width 4 --print-width 80 --single-quote --trailing-comma es5 \"{app.js,models/*.js,web/**/*.js,web/**/*.less}\"",
        "heroku-postbuild": "NODE_ENV=production parcel build",
        "build": "NODE_ENV=production parcel build",
        "test": "NODE_ENV=test jest --coverage"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 80,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "jest": {
        "verbose": true,
        "automock": false,
        "testRegex": "web/js/.*\\.test.js$",
        "transform": {
            ".*": "<rootDir>/node_modules/babel-jest"
        },
        "moduleFileExtensions": [
            "js"
        ],
        "setupFiles": [
            "raf/polyfill"
        ]
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "bootstrap": "^3.3.x",
        "bootswatch": "^3.3.7",
        "classnames": "^2.2.6",
        "client-sessions": "^0.8.0",
        "compression": "^1.7.4",
        "connect-flash": "^0.1.1",
        "express": "^4.17.1",
        "finale-rest": "^1.0.6",
        "font-awesome": "^4.7.0",
        "helmet": "^3.20.0",
        "history": "^4.9.0",
        "isomorphic-fetch": "^2.2.1",
        "lodash": "^4.17.15",
        "moment": "^2.24.0",
        "morgan": "^1.9.1",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "pg": "^7.12.1",
        "prop-types": "^15.7.2",
        "react": "^16.9.0",
        "react-datetime": "^2.16.3",
        "react-dom": "^16.9.0",
        "react-redux": "^7.1.1",
        "react-router-dom": "^4.3.1",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0",
        "sequelize": "^5.16.0",
        "serve-static": "^1.14.1",
        "sqlite3": "^4.1.0",
        "uuid": "^3.3.3",
        "validator": "^11.1.0",
        "whatwg-fetch": "^3.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "eslint": "^5.16.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jest": "^21.27.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^2.7.0",
        "eslint-plugin-react": "^7.14.3",
        "jest": "^24.9.0",
        "less": "^3.10.3",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.18.2",
        "raf": "^3.4.1",
        "react-test-renderer": "^16.9.0"
    }
}
