{
    "name": "blueprint-task-manager",
    "version": "0.4.1",
    "author": "Stan Lemon <stosh1985@gmail.com>",
    "description": "Blueprint Task Manager - A playground to experiment with React, Redux and their devtools.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:stanlemon/blueprint-taskmanager.git"
    },
    "engines": {
        "node": "8.6.0"
    },
    "scripts": {
        "start": "node app.js",
        "dev": "NODE_ENV=development nodemon app.js",
        "lint": "eslint --ext .jsx --ext .js app.js models/* web/js/**",
        "prettier": "prettier --write --tab-width 4 --print-width 80 --single-quote --trailing-comma es5 \"{app.js,models/*.js,web/**/*.js,web/**/*.less}\"",
        "heroku-postbuild": "NODE_ENV=production webpack",
        "build": "NODE_ENV=production webpack",
        "test": "NODE_ENV=test jest --coverage"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 80,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "jest": {
        "verbose": true,
        "automock": false,
        "testRegex": "web/js/.*\\.test.js$",
        "transform": {
            ".*": "<rootDir>/node_modules/babel-jest"
        },
        "moduleFileExtensions": [
            "js"
        ],
        "setupFiles": [
            "raf/polyfill"
        ]
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "bootstrap": "^3.3.x",
        "bootswatch": "^3.3.7",
        "classnames": "^2.2.6",
        "client-sessions": "^0.8.0",
        "compression": "^1.7.3",
        "connect-flash": "^0.1.1",
        "epilogue": "^0.7.1",
        "express": "^4.16.3",
        "font-awesome": "^4.7.0",
        "helmet": "^3.13.0",
        "history": "^4.7.2",
        "isomorphic-fetch": "^2.2.1",
        "lodash": "^4.17.10",
        "moment": "^2.22.2",
        "morgan": "^1.9.0",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "pg": "^7.4.3",
        "prop-types": "^15.6.2",
        "react": "^16.4.2",
        "react-datetime": "^2.15.0",
        "react-dom": "^16.4.2",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.3.1",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "sequelize": "^4.38.0",
        "serve-static": "^1.13.2",
        "uuid": "^3.3.2",
        "validator": "^10.6.0",
        "whatwg-fetch": "^2.0.4"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.6",
        "babel-jest": "^23.4.2",
        "babel-loader": "^7.1.5",
        "babel-plugin-lodash": "^3.3.4",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.14",
        "babel-preset-env": "^1.7.0",
        "babel-preset-minify": "^0.4.3",
        "babel-preset-react": "^6.24.1",
        "babel-preset-react-hmre": "^1.1.x",
        "babili-webpack-plugin": "^0.1.2",
        "css-loader": "^1.0.0",
        "enzyme": "^3.4.4",
        "enzyme-adapter-react-16": "^1.2.0",
        "eslint": "^5.4.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jest": "^21.21.0",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-prettier": "^2.6.2",
        "eslint-plugin-react": "^7.11.1",
        "exports-loader": "^0.7.0",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.11",
        "imports-loader": "^0.8.0",
        "jest": "^23.5.0",
        "less": "^3.8.1",
        "less-loader": "^4.1.0",
        "mini-css-extract-plugin": "^0.4.1",
        "nodemon": "^1.18.3",
        "prettier": "^1.14.2",
        "raf": "^3.4.0",
        "react-test-renderer": "^16.4.2",
        "redux-devtools": "^3.4.1",
        "redux-devtools-dock-monitor": "^1.1.3",
        "redux-devtools-log-monitor": "^1.4.0",
        "sqlite3": "^4.1.0",
        "style-loader": "^0.22.1",
        "url-loader": "^1.1.1",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-dev-middleware": "^3.1.3",
        "webpack-hot-middleware": "^2.22.3"
    }
}
